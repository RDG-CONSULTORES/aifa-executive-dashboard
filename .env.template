# Configuración de APIs para AIFA Demo
# Copia este archivo a .env y agrega tus API keys reales

# APIs de Aviación
AVIATIONSTACK_API_KEY=your_aviationstack_key_here
FLIGHTAWARE_API_KEY=your_flightaware_key_here
AMADEUS_API_KEY=your_amadeus_key_here

# APIs de Datos Económicos
FRED_API_KEY=your_fred_key_here
WORLD_BANK_API_KEY=optional_world_bank_key

# APIs de IA
OPENAI_API_KEY=your_openai_key_here
CLAUDE_API_KEY=your_claude_key_here

# Configuración de Base de Datos y Caché
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://user:pass@localhost/aifa_demo

# Configuración de Seguridad
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random
ENCRYPTION_KEY=your_32_char_encryption_key_here

# Configuración de la Aplicación
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development

# URLs de servicios externos
AIFA_WEBSITE_URL=https://www.aifa.com.mx
SCT_API_URL=https://www.sct.gob.mx/api

# Límites y configuración
MAX_REQUESTS_PER_MINUTE=100
CACHE_TTL_SECONDS=300
SESSION_TIMEOUT=3600